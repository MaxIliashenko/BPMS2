@using BPMS.Shared.Form

<DxFormLayoutItem Caption="@ControlData.Caption" ColSpanMd="@ControlData.ParentColumnWidth">
    <Template>
        <DxCheckBox @bind-Checked="@Value" />
    </Template>
</DxFormLayoutItem>

@code {
    [Parameter]
    public ControlData ControlData { get; set; }
    [Parameter]
    public FormData FormData { get; set; }

    bool Value { get; set; }

    protected override void OnParametersSet()
    {
        if (bool.TryParse(FormData.FormObject[ControlData.Id].ToString(), out var val))
            Value = val;
        //Console.WriteLine($"CheckBox [{ControlData.Id}][{FormData.FormObject[ControlData.Id]}][{val}][{Value}]");
    }
}