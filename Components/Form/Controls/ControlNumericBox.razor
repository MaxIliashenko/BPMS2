@using BPMS.Shared.Form

<DxFormLayoutItem Caption="@ControlData.Caption" ColSpanMd="@ControlData.ParentColumnWidth">
    <Template>
        <DxSpinEdit @bind-Value="@Value" DisplayFormat="@ControlData.Format"/>
    </Template>
</DxFormLayoutItem>

@code {
    [Parameter]
    public ControlData ControlData { get; set; }
    [Parameter]
    public FormData FormData { get; set; }

    decimal Value { get; set; } 

    protected override void OnParametersSet()
    {
        if (decimal.TryParse(FormData.FormObject[ControlData.Id].ToString(), out var val))
            Value = val;
        //Console.WriteLine($"NumBox [{ControlData.Id}][{FormData.FormObject[ControlData.Id]}][{val}][{Value}]");
    }
}